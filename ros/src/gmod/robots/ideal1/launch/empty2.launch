<launch>

  <arg name="ROBOT_MODEL_NAME" value="$(find ideal1)"/>
  <arg name="WORLD_MODEL_NAME" value="$(find polygone_empty)"/>

  <arg name="robot_name" default="mobot1"/>

  <arg name="pos_x" default="2.75"/>
  <arg name="pos_y" default="1.75"/>
  <arg name="pos_z" default="0.25"/>

  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="0"/>

  <!--
    Полигон
  -->
  <include file="$(arg WORLD_MODEL_NAME)/launch/world.launch"/>

  <!--
    Роботы
    Set different initial poses to avoid collision when spawning the model
  -->

  <include file="$(arg ROBOT_MODEL_NAME)/launch/robot.launch">
    <arg name="robot_name" value="mobot1"/>
    <arg name="pos_x" value="$(arg pos_x)"/>
    <arg name="pos_y" value="$(arg pos_y)"/>
    <arg name="pos_z" value="$(arg pos_z)"/>
    <arg name="yaw" value="$(arg yaw)"/>
    <arg name="pitch" value="$(arg pitch)"/>
    <arg name="roll" value="$(arg roll)"/>
  </include>

  <include file="$(arg ROBOT_MODEL_NAME)/launch/robot.launch">
    <arg name="robot_name" value="mobot2"/>
    <arg name="pos_x" value="4"/>
    <arg name="pos_y" value="4"/>
    <arg name="pos_z" value="$(arg pos_z)"/>
    <arg name="yaw" value="$(arg yaw)"/>
    <arg name="pitch" value="$(arg pitch)"/>
    <arg name="roll" value="$(arg roll)"/>
  </include>

  <include file="$(arg ROBOT_MODEL_NAME)/launch/robot.launch">
    <arg name="robot_name" value="mobot3"/>
    <arg name="pos_x" value="5"/>
    <arg name="pos_y" value="5"/>
    <arg name="pos_z" value="$(arg pos_z)"/>
    <arg name="yaw" value="$(arg yaw)"/>
    <arg name="pitch" value="$(arg pitch)"/>
    <arg name="roll" value="$(arg roll)"/>
  </include>

</launch>
