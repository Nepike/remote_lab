demo.py -- Основной скрипт
run.sh  -- Запускающий скрипт
demo.m  -- Скрипт, запускающий ядро системы моделирования
demo.v  -- Скрипт, запускающий визуализатор
readme  -- Этот файл

config -- Каталог с файлами конфигурации
    agents.ctl -- Описание агента
    field.map  -- Описание среды, которое превращается в пару файлов env.ctl (параметры поля) и map.ctl (карта)


    figure = "turtle"
